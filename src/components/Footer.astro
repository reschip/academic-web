---
// Footer component
export interface FooterLink {
    name: string;
    url: string;
}

export interface Props {
    links?: {
        coursework?: FooterLink[];
        about?: FooterLink[];
        socials?: FooterLink[];
    };
    copyright?: string;
    author?: string;
    institution?: string;
}

const { 
    links = {
        coursework: [
            { name: "Coursework", url: "/coursework" }
        ],
        about: [
            { name: "About", url: "/about" }
        ],
        socials: [
            { name: "GitHub", url: "https://github.com/reschip" },
            { name: "LinkedIn", url: "https://www.linkedin.com/in/andreschipol/" },
            { name: "X / Twitter", url: "https://x.com/reschip" },
            { name: "Personal Website", url: "https://www.andreschipol.com" }
        ]
    },
    copyright = "© 2025",
    author = "Andrés Cruz Chipol",
    institution = "@Cinvestav"
} = Astro.props;
---

<footer class="footer">
    <div class="footer-content">
        <div class="footer-links">
            <div class="footer-section">
                <h4 class="footer-section-title">Links</h4>
                <div class="footer-links-group">
                    <div class="footer-links-column">
                        <h5 class="footer-column-title">Coursework</h5>
                        {links.coursework?.map(link => (
                            <a href={link.url} class="footer-link">{link.name}</a>
                        ))}
                    </div>
                    <div class="footer-links-column">
                        <h5 class="footer-column-title">About</h5>
                        {links.about?.map(link => (
                            <a href={link.url} class="footer-link">{link.name}</a>
                        ))}
                    </div>
                    <div class="footer-links-column">
                        <h5 class="footer-column-title">Socials</h5>
                        {links.socials?.map(link => (
                            <a href={link.url} class="footer-link" target="_blank" rel="noopener noreferrer">{link.name}</a>
                        ))}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer-bottom">
            <div class="footer-copyright">
                <p class="copyright-text">{copyright}</p>
                <p class="author-text">{author}</p>
                <p class="institution-text">{institution}</p>
            </div>
        </div>
    </div>
</footer>
